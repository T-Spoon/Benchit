<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Benchit.ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:dividerHeight">8dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Benchit.ListView.ListItem" parent="android:Widget">
        <item name="android:background">@color/background_dark</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Benchit.ListView.ListItem.Text" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
